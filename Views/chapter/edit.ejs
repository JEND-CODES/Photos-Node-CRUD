<%- include("../partials/header"); %>
<br /><br /><br /><br />
<div class="container">
	<div class="row">

        <!--<h1 style="text-align: center;">Edit <%=chapter.title%></h1>-->
        
        <div style="width: 50%; margin: 30px auto;">
            
            <form action="/chapter/<%=chapter._id%>/?_method=PUT" method="POST">
                
				<div class="form-group">
					<input type="text" name="chapter[title]" value="<%=chapter.title%>" class="form-control">	
				</div>

				<div class="form-group">
					
                    <textarea name="chapter[article]" style="width:100%; height:200px;"><%=chapter.article%></textarea>
                    
                </div>
                
                <div class="form-group">
					<input type="text" name="chapter[image]"  value="<%=chapter.image%>" class="form-control">	
                </div>
                
                <div class="form-group">
					<input type="text" name="chapter[video]"  value="<%=chapter.video%>" class="form-control">	
                </div>
                
                <div class="form-group">
					<input type="text" name="chapter[author]"  value="<%=chapter.author%>" class="form-control">	
				</div>

				<div class="form-group">
					<input type="submit" class="btn btn-primary btn-lg btn-block">
				</div>	
            </form>
            
            <!--<a href="/chapter">Retour Ã  la liste des chapitres</a>-->
            
		</div>

	</div>
</div>

<%- include("../partials/footer"); %>